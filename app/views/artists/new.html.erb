<h1>Create an Artist</h1>

<% if flash[:messages] %>
  <% flash[:messages].each do |message| %>
    <ul>
    <li><%= message %></li>
    </ul>
    <% end %>
<% end %>

<%= form_for @artist do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.submit %>
<% end %>